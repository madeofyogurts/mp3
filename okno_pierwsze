#inny sposob

import wx
class FirstFrame(wx.Frame):
    def __init__(self,parent, title):
         super(FirstFrame,self).__init__(parent, title=title)

class MyApp(wx.App):
    def OnInit(self):
        self.frame = FirstFrame(parent=None, title= "Pierwsze okienko")
        self.frame.Show()
        return True

app = MyApp()
app.MainLoop()
